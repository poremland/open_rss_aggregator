<% content_for :content do %>
	<%= form_tag("#{url_for(:controller => :login, :action => :do_login)}") do -%>
		<table class="loginForm" align="center">
			<tr>
				<td colspan="2"><h1><%=APP_CONFIG["mail_domain"]%> RSS Login</h1></td>
			</tr>
			<tr>
				<td>Login</td>
				<td><input name="username" type="text" /></td>
			</tr>
			<tr>
				<td>Password</td>
				<td><input name="password" type="password" /></td>
			</tr>
			<tr>
				<td colspan="2"><%= submit_tag "Login" %></td>
			</tr>
		</table>
	<% end -%>
<% end %>
<%= render :template => 'layouts/application' %>
